<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:lit="clr-namespace:LiteralWpf.Controls"
    mc:Ignorable="d"
    x:Class="LiteralWpf.Controls.ServerBlock"
    x:Name="ServerBlockControl"
    d:DesignWidth="160" d:DesignHeight="160" Width="Auto" Height="Auto">

    <Grid x:Name="LayoutRoot" Margin="5">
        <Label x:Name="ServerName" Content="LolServer" Height="30" Padding="5,0,2,0" Background="{x:Null}" Foreground="#FFCCCCCC" FontFamily="/LiteralWpf;component/Fonts/#Lato Light" FontSize="18.667" VerticalAlignment="Top" VerticalContentAlignment="Center" TextOptions.TextHintingMode="Fixed"/>
        <StackPanel x:Name="ChannelList" Margin="0,30,0,0">
            <lit:ChannelButton></lit:ChannelButton>
            <lit:ChannelButton></lit:ChannelButton>
        </StackPanel>
    </Grid>
</UserControl>