<control:FramelessWindow x:Name="MainWnd" x:Class="LiteralWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:LiteralWpf.Controls"
        Title="MainWindow" Width="800" Height="550" Background="#FF333333">
    <Grid Margin="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="459*"/>
            <RowDefinition Height="31*"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="ChatContainer" Grid.Column="1" HorizontalAlignment="Left" Height="457.942" Grid.Row="1" VerticalAlignment="Top" Width="475.2"/>
        <StackPanel x:Name="ServerTree" HorizontalAlignment="Left" Height="488.471" VerticalAlignment="Top" Width="158.4" Grid.RowSpan="3"/>
        <StackPanel x:Name="UserContainer" Grid.Column="2" HorizontalAlignment="Left" Height="488.471" VerticalAlignment="Top" Width="158.4" Grid.RowSpan="3"/>
        <Label Content="Topic goes here" Grid.Column="1" Height="24" VerticalAlignment="Top" FontSize="16" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Padding="0" Background="{x:Null}" Foreground="#FFDDDDDD" Margin="0,0,0,0"/>
    </Grid>
</control:FramelessWindow>
