<control:FramelessWindow x:Name="MainWnd" x:Class="LiteralWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:LiteralWpf.Controls"
        Title="MainWindow" Width="800" Height="550" Background="#FF333333" MinWidth="500" MinHeight="300">
    <Grid Margin="0" Background="#FF333333">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="160"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24"/>
            <RowDefinition Height="24"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="ChatContainer" Grid.Column="1" Grid.Row="2" Background="#FF222222"/>
        <StackPanel x:Name="ServerTree" Grid.Row="2" Background="#FF333333"/>
        <StackPanel x:Name="UserContainer" Grid.Column="2" Grid.Row="2" Background="#FF333333"/>
        <Label Content="Topic goes here" Grid.Column="1" FontSize="13.333" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" Background="#FF2A2A2A" Foreground="#FF878787" Grid.Row="1"/>
        <Menu Background="{x:Null}" BorderThickness="2,2,0,0" Panel.ZIndex="1">
        	<MenuItem Header="_FILE" BorderThickness="1,2,1,1" Background="{x:Null}" Foreground="#FFCCCCCC" FontSize="12">
        		<MenuItem Header="Quit" ToolTip="Close the application" Foreground="#FF080808" Background="{x:Null}" BorderThickness="0"/>
        	</MenuItem>
			<MenuItem Header="_SETTINGS" BorderThickness="1,2,1,1" Background="{x:Null}" Foreground="#FFCCCCCC" FontSize="12" IsEnabled="False">
        	</MenuItem>
			<MenuItem Header="_?" BorderThickness="1,2,1,1" Background="{x:Null}" Foreground="#FFCCCCCC" FontSize="12" IsEnabled="False">
        	</MenuItem>
        </Menu>
        <Label Content="- Literal -" Grid.Column="1" HorizontalAlignment="Left" Height="24" VerticalAlignment="Top" Width="472" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="#FFDDDDDD" FontSize="14.667" Padding="0"/>
        <TextBox x:Name="InputBox" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" Margin="0,5" Background="#FF222222" BorderBrush="#FF444444" Foreground="#FFAAAAAA" VerticalContentAlignment="Center" SelectionBrush="White" BorderThickness="1" Padding="5,0" Text="Input message here…" FontSize="13.333" />
    </Grid>
	<control:FramelessWindow.Resources>
		<Style TargetType="TextBox">
			<Setter Property="Template">
			   <Setter.Value>
				  <ControlTemplate TargetType="TextBox">
					  <Border BorderThickness="{TemplateBinding Border.BorderThickness}"
							  BorderBrush="{TemplateBinding Border.BorderBrush}"
							  Background="{TemplateBinding Panel.Background}"
							  Name="border"
							  SnapsToDevicePixels="True">
						 <ScrollViewer HorizontalScrollBarVisibility="Hidden"
									   VerticalScrollBarVisibility="Hidden"
									   Name="PART_ContentHost"
									   Focusable="False" />
					  </Border>
				   <ControlTemplate.Triggers>
					  <Trigger Property="UIElement.IsEnabled" Value="False">
						<Setter Property="UIElement.Opacity" TargetName="border"
								Value="0.56"/>
					  </Trigger>
					  <Trigger Property="UIElement.IsMouseOver" Value="True">
						<Setter Property="Border.BorderBrush" TargetName="border" 
								Value="#FF666666"/>
					  </Trigger>
					  <Trigger Property="UIElement.IsKeyboardFocused" Value="True">
						<Setter Property="Border.BorderBrush" TargetName="border" 
							   Value="#FF888888"/>
					  </Trigger>
				   </ControlTemplate.Triggers>
				</ControlTemplate>
			  </Setter.Value>
			</Setter>
		 </Style>
	</control:FramelessWindow.Resources>
</control:FramelessWindow>
